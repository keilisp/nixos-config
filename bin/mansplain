#!/usr/bin/env bash

options=("search
random
quit")

choice=$(echo -e "${options[@]}" |
	dmenu -i -p "Manpages...")

case $choice in
quit)
	notify-send "ðŸ’£ Program terminated"
	;;
search)
	man -k . | shuf |
		dmenu -i -l 20 -p "What man to read..." |
		awk '{print $1}' |
		xargs -r man -Tpdf | zathura -
	;;
random)
	find /usr/share/man/man1 -type f | shuf |
		awk -F '/' '/1/ {print $6}' |
		sed 's/.gz//g' | head -1 |
		dmenu -i -p "Random Manpage..." |
		xargs man -Tpdf | zathura -
	;;
esac
